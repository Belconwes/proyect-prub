@model Proyecto_prueba.Models.Producto

@{
    Layout = "~/Views/Shared/Admin_layout.cshtml";
}

<!DOCTYPE html>

<html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>Details</title>
    </head>
  <body>
    <div class="container">
        <h2>Detalles del Producto</h2>
        <div class="card">
            @if (Model.ImagenProducto != null && Model.ImagenProducto.Length > 0)
            {
                <img src="data:image;base64,@Convert.ToBase64String(Model.ImagenProducto)" class="card-img-top" alt="Imagen del Producto">
            }
            <div class="card-body">
                <h5 class="card-title">@Model.Nombre</h5>
                <p class="card-text">Precio: @Model.Price</p>
                <p class="card-text">@Model.Descripcion</p>
                <p class="card-text">Categoría: @Model.Categoria</p>
                <a href="@Url.Action("Index", "Productoes")" class="btn btn-primary">Volver</a>
            </div>
        </div>
    </div>


    
  </body>
</html>
